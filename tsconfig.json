{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "ES6",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "cypress/*": ["./cypress/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src", "cypress"],
  "exclude": ["node_modules", "dist", "docs"]
}
